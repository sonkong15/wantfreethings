<!DOCTYPE html>
<html>
<head>
  <title>Wantfreethings</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    
    <ul class="nav">
    	<li><%= image_tag("wantfreething.png", :style => "width: 270px;" )%></li>
      <li class="active"><a href="<%= root_path %>" style="font-size: 18px;width: 48px;height: 20px;">Home</a></li>
      <li><a href="#">Browes Blogs</a></li>
      <li><a href="#">popular tags</a></li>
      <% if current_user %>
      <li id="fat-menu" class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
      <ul class= "dropdown-menu" role="menu" aria-labelledby="dlabel">
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "add a post", new_post_url %></li>
        <li><%= link_to "settings", edit_user_path(current_user) %></li>
        <li><%= link_to "Add A site", new_blog_url %></li>
      </ul>

    <li><%= link_to "Login out", loginout_path %></li>    
    <% else %>
    <li><%= link_to "Sign up", signup_path %></li>
    <li><%= link_to "Login", login_path %></li>
    <% end %>
    </ul>
  </div>
</div>
<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
<%= yield %>

</body>
</html>
